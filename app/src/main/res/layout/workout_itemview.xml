<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/wivRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="14"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/wivTitleOfWorkoutTV"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_margin="5dp"
            android:layout_weight="5"
            android:hint="@string/workout_title"
            android:textColor="#000000"
            android:textSize="25sp"
            />

        <Button
            android:id="@+id/wivStartBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:background="@drawable/buttonborder"
            android:text="@string/start"
            android:textColor="#FFFFFF"
            android:layout_weight="3"/>


        <Button
            android:id="@+id/wivEditBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="3"
            android:background="@drawable/buttonborder"
            android:text="@string/edit"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/wivCopyBTN"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_margin="5dp"
            android:layout_weight="3"
            android:background="@drawable/buttonborder"
            android:text="@string/copyWorkout"
            android:textColor="#FFFFFF" />
    </LinearLayout>



</RelativeLayout>