<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/pwRelativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/activityborder">

    <TextView
        android:id="@+id/pwSecondsTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pwCountdownTV"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"
        android:text="@string/seconds"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/pwCountdownTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="0"
        android:textSize="56sp"
        android:textColor="#3598FF" />

    <TextView
        android:id="@+id/pwExerciseTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/pwCountdownTV"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="50dp"
        android:text="@string/exercise_pw"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/pwTitleOfWorkoutTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="42dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="@string/workout_title"
        android:textSize="32sp" />

    <Button
        android:id="@+id/pwStartBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="43dp"
        android:layout_toLeftOf="@+id/pwSecondsTV"
        android:background="@drawable/buttonborder"
        android:text="@string/start"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/pwSkipBTN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/pwStartBTN"
        android:layout_alignBottom="@+id/pwStartBTN"
        android:layout_toRightOf="@+id/pwSecondsTV"
        android:background="@drawable/buttonborder"
        android:text="@string/skip"
        android:textColor="#FFFFFF" />

</RelativeLayout>